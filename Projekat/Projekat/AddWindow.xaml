        <Button x:Name="btnDodaj" Content="Dodaj" HorizontalAlignment="Left" Height="38" Margin="83,315,0,0" VerticalAlignment="Top" Width="146" Click="btnDodaj_Click"/>
        <Label Content="Ime:" HorizontalAlignment="Right" Margin="0,18,233,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Prezime:" HorizontalAlignment="Right" Margin="0,54,233,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Dom:" HorizontalAlignment="Right" Margin="0,90,233,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Fakultet:" HorizontalAlignment="Right" Margin="0,126,233,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Godina:" HorizontalAlignment="Right" Margin="0,162,233,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Komentar:" HorizontalAlignment="Right" Margin="0,198,233,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
