            <ComboBoxItem Content="1" FontSize="14"/>
            <ComboBoxItem Content="2" FontSize="14"/>
        </ComboBox>
        <ComboBox x:Name="cmbFakultet" HorizontalAlignment="Left" Margin="83,126,0,0" VerticalAlignment="Top" Width="199" Height="31" FontSize="14">
            <ComboBoxItem Content="ETF"  FontSize="14"/>
            <ComboBoxItem Content="MAF"  FontSize="14"/>
            <ComboBoxItem Content="MAK"  FontSize="14"/>
            <ComboBoxItem Content="POF"  FontSize="14"/>
        </ComboBox>
        <ComboBox x:Name="cmbGodina" HorizontalAlignment="Left" Margin="83,162,0,0" VerticalAlignment="Top" Width="199" Height="31" RenderTransformOrigin="1.097,0.393">
            <ComboBoxItem Content="1"  FontSize="14"/>
            <ComboBoxItem Content="2"  FontSize="14"/>
            <ComboBoxItem Content="3"  FontSize="14"/>
            <ComboBoxItem Content="4"  FontSize="14"/>
