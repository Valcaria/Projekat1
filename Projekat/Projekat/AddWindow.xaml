        Title="AddWindow" Height="408.298" Width="313.83">
    <Grid>
        <TextBox x:Name="txtIme" HorizontalAlignment="Left" Height="31" Margin="83,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" FontSize="14"/>
        <TextBox x:Name="txtPrezime" HorizontalAlignment="Left" Height="31" Margin="83,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" FontSize="14"/>
        <TextBox x:Name="txtKomentar" HorizontalAlignment="Left" Height="102" Margin="83,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" FontSize="14"/>
